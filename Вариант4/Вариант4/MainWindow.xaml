<Window x:Class="Вариант4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Вариант4"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="191*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="False" Grid.ColumnSpan="2">
            <Label DockPanel.Dock="Top" Content="Регистрация пользователя" />
            <Label DockPanel.Dock="Top" Content="ФИО"/>
            <Label DockPanel.Dock="Top" Content="Email"/>
            <Button  Height="25" DockPanel.Dock="Left"  Content="Зарегистрироваться"/>


        </DockPanel>
        <Canvas Grid.ColumnSpan="2">
            <TextBox Canvas.Right="20" Canvas.Top="27" Width="185" Height="25"/>
            <TextBox Canvas.Right="20" Canvas.Top="52" Width="185" Height="25"/>
        </Canvas>
    </Grid>
</Window>
